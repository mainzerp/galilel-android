<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBrown1</item>
        <item name="colorPrimaryDark">@color/darkBrownTemp</item>
        <item name="colorAccent">@color/darkBrown2</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/galilelWhite</item>
        <item name="android:textColorSecondary">@color/galilelWhite</item>
        <item name="actionMenuTextColor">@color/galilelWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/galilelWhite</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style
        name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Subtitles">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/grey35black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Inputs">
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/transaction_inputs</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey85black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- custom dialog activity theme -->
    <style
        name="AppTheme.Dialog"
        parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">

        <!-- removing the dialog's action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey85black</item>
        <item name="android:textColorLink">@color/grey85black</item>
    </style>

    <style name="fab_text_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/grey85black</item>
        <item name="fab_colorNormal">@color/darkBrown1</item>
        <item name="fab_colorPressed">@color/darkBrownTemp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/darkBrown2</item>
    </style>
</resources>
