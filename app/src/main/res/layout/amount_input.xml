<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal">

            <TextView
                android:id = "@+id/titleAmount"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/title_amount"
                android:layout_marginBottom="10dp"
                android:textColor = "@color/grey85black"
                android:textSize = "14sp" />

            <EditText
                android:id = "@+id/edit_amount"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:padding="8dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:inputType="numberDecimal"
                android:background="@drawable/transaction_inputs"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:maxLength="8"
                android:textColor = "@color/grey85black"
                android:textSize = "16sp" />

            <TextView
                android:id = "@+id/txt_local_currency"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textColor = "@color/grey35black"
                android:textSize = "16sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id="@+id/txt_currency_amount"
                android:text = "@string/title_amount"
                android:layout_marginBottom="10dp"
                android:textColor = "@color/grey85black"
                android:textSize = "14sp" />

            <EditText
                android:id = "@+id/edit_amount_currency"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:padding="8dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:inputType="numberDecimal"
                android:background="@drawable/transaction_inputs"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:maxLength="8"
                android:textColor = "@color/grey85black"
                android:textSize = "16sp" />

            <TextView
                android:id = "@+id/txt_show_gali"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textColor = "@color/grey35black"
                android:textSize = "16sp" />

        </LinearLayout>

    </ViewFlipper>

    <ImageButton
        android:id="@+id/btn_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="52dp"
        android:paddingRight="15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_swap"
        android:layout_gravity="center"
        android:layout_marginRight="5dp" />

</RelativeLayout>
