    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="#ffffff" />

        </shape>
    </item>

    <item
        android:right="1dp">

        <shape
            android:shape="rectangle">

            <gradient
                android:startColor="@color/darkBrown3"
                android:centerColor="@color/darkBrown3"
                android:endColor="@color/darkBrown1"
                android:angle="180" />

        </shape>

    </item>

</layer-list>
