    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/grey35black" />

                </shape>
            </item>
            <item
                android:bottom="1dp">

                <shape
                    android:shape="rectangle">

                    <solid
